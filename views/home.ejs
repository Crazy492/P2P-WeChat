    <body >
      <div class="background">
        <div class="box">
          <div class="side">
            <div class="side-top">
              <!-- <img src="/imgs/me.jpg" alt="">
              <span class="side-username">啦啦啦</span>
              <span class="side-group">英雄联盟<span> -->
              <img class="avator" src=<%= base64 %> alt="">
              <span class="side-username"><%= username %></span>
              <span class="side-group"><%= group %></span>
              <span class="IP" style="color:red"><%= IP %></span>
              <p>在线人数：<span class="number">1</span></p>
            </div>
            <div class="side-broadcast">
              <span style="color:white ;font-size:12px">To 所有人 :</span></br>
